{
  "name": "mm",
  "private": true,
  "version": "0.0.0",
  "description": "Libraries for the MagicMirror experimental branch.",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --verbose --parallel --topological-dev run build",
    "test": "jest",
    "test:changed": "jest --onlyChanged",
    "test:fast": "jest --testPathIgnorePatterns e2e",
    "lint": "prettier --write . && eslint packages",
    "changeset": "changeset",
    "version:all": "yarn version apply --all",
    "publish": "yarn workspaces foreach --exclude mm --verbose npm publish --tolerate-republish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joshwilsonvu/mm.git"
  },
  "authors": [
    "Josh Wilson <joshua.wilson@vanderbilt.edu>"
  ],
  "contributors": [
    "https://github.com/joshwilsonvu/mm/graphs/contributors"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/joshwilsonvu/mm/issues"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.3",
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/preset-react": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@testing-library/jest-dom": "^5.11.0",
    "@types/jest": "^26.0.4",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "axios": "^0.19.2",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "4.x",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-jest": "^23.16.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "2.x",
    "execa": "^4.0.2",
    "fs-extra": "^9.0.1",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "jest-watch-suspend": "^1.1.2",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "strip-ansi": "^6.0.0",
    "ts-jest": "^26.1.3",
    "typescript": "^3.9.7",
    "wait-for-expect": "^3.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn build"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint",
    "*.{js,jsx,ts,tsx,css,md,json,yaml}": "prettier --no-config --write"
  }
}
